<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXDrawer?>
<?import com.jfoenix.controls.JFXHamburger?>
<?import com.jfoenix.controls.JFXMasonryPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="mainPane" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.app.sample.Controller">
   <bottom>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <Text layoutX="629.0" layoutY="143.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Your Score:" />
            <Label fx:id="getScore" layoutX="704.0" layoutY="130.0" text="0" />
         </children>
      </AnchorPane>
   </bottom>
   <top>
      <AnchorPane fx:id="topBar" style="-fx-background-color: #3F51B5;" BorderPane.alignment="CENTER">
         <children>
            <JFXHamburger fx:id="homeBurger" layoutX="14.0" layoutY="12.0" prefHeight="29.0" prefWidth="33.0" stylesheets="@../style.css" visible="false" />
            <Label fx:id="dashText" layoutX="414.0" layoutY="4.0" text="Dashboard" textFill="WHITE">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </top>
   <center>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <JFXMasonryPane fx:id="Masonry" prefHeight="568.0" prefWidth="610.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onAssignmentClicked" styleClass="home-button" stylesheets="@../style.css" text="Assignment List" textFill="WHITE" />
                  <Label fx:id="test" text="Label">
                     <contextMenu>
                        <ContextMenu>
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#onDelete" text="Delete" />
                              <MenuItem mnemonicParsing="false" text="Edit" />
                          </items>
                        </ContextMenu>
                     </contextMenu>
                  </Label>
                  <Button fx:id="rewardButton" mnemonicParsing="false" onAction="#onRewardClicked" styleClass="home-button" stylesheets="@../style.css" text="My Galaxy" textFill="WHITE" />
                  <Label fx:id="quote" text="Quote">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </JFXMasonryPane>
            <JFXDrawer fx:id="navDrawer" defaultDrawerSize="265.0" nodeOrientation="LEFT_TO_RIGHT" overLayVisible="false" prefHeight="570.0" prefWidth="265.0" resizableOnDrag="true" />
         </children>
      </AnchorPane>
   </center>
   <right>
      <AnchorPane fx:id="rightDrawer" prefWidth="265.0" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
